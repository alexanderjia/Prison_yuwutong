<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_metting_layout_root"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent"
    android:onClick="onClickListener">

    <TextView
        android:id="@+id/video_metting_layout_tv_header_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_half"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/white"
        android:textSize="30dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/video_metting_layout_tv_call_zijing"
        android:layout_width="0dip"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="正在拨号..."
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="5"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/video_metting_layout_ll_check_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/video_metting_layout_ll_check_id"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintHorizontal_weight="2"
        android:onClick="onClickListener"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/white_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/video_metting_layout_tv_call_zijing"
        app:layout_constraintTop_toTopOf="parent">

        <com.starlight.mobile.android.lib.view.EqualImageView
            android:id="@+id/video_metting_layout_iv_avatar"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:layout_marginBottom="5dip"
            android:src="@color/common_line_color" />

        <com.gkzxhn.prison.customview.CardWImageView
            android:id="@+id/video_metting_layout_iv_id_card_font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:background="@drawable/id_card_shape"
            android:scaleType="fitXY"
            android:src="@color/common_line_color" />

        <com.gkzxhn.prison.customview.CardWImageView
            android:id="@+id/video_metting_layout_iv_id_card_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:background="@drawable/id_card_shape"
            android:scaleType="fitXY"
            android:src="@color/common_line_color" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/video_metting_layout_cb_micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:layout_toLeftOf="@id/video_metting_layout_cb_speaker"
        android:button="@drawable/micro_selector"
        android:checked="true"
        android:clickable="true"
        android:onClick="onClickListener"
        app:layout_constraintRight_toLeftOf="@+id/video_metting_layout_iv_hang_up"
        app:layout_constraintTop_toTopOf="@+id/video_metting_layout_iv_hang_up" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/video_metting_layout_iv_hang_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_half"
        android:clickable="true"
        android:onClick="onClickListener"
        android:src="@drawable/hang_up_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/video_metting_layout_cb_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:button="@drawable/speaker_selector"
        android:checked="true"
        android:clickable="true"
        android:gravity="center|bottom"
        android:onClick="onClickListener"
        app:layout_constraintLeft_toRightOf="@+id/video_metting_layout_iv_hang_up"
        app:layout_constraintTop_toTopOf="@+id/video_metting_layout_iv_hang_up" />
</android.support.constraint.ConstraintLayout>