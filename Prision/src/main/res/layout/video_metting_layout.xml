<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/video_metting_layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:onClick="onClickListener">

    <TextView
        android:id="@+id/video_metting_layout_tv_header_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_half"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="30dip"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/video_metting_layout_tv_call_zijing"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在拨号..."
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/video_metting_layout_ll_check_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/video_metting_layout_ll_check_id"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickListener"
        android:orientation="horizontal"
        android:paddingBottom="39dp"
        android:paddingTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/video_metting_layout_tv_call_zijing"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/video_metting_layout_iv_left"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_call_user_point_gary_select"
            android:onClick="onClickListener"
            android:paddingBottom="14dp"
            android:paddingEnd="21dp"
            android:paddingStart="21dp"
            android:paddingTop="14dp"
            android:src="@mipmap/ic_arrow_left_white"
        />

        <android.support.v4.view.ViewPager
            android:id="@+id/video_metting_layout_vp"
            android:layout_width="240dp"
            android:layout_height="482dp"
        >

        </android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/video_metting_layout_iv_right"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/shape_call_user_point_blue_select"
            android:onClick="onClickListener"
            android:paddingBottom="14dp"
            android:paddingEnd="21dp"
            android:paddingStart="21dp"
            android:paddingTop="14dp"
            android:src="@mipmap/ic_arrow_right_white"
        />

    </LinearLayout>

    <CheckBox
        android:id="@+id/video_metting_layout_cb_micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:layout_toLeftOf="@id/video_metting_layout_cb_speaker"
        android:button="@drawable/micro_selector"
        android:checked="true"
        android:clickable="true"
        android:onClick="onClickListener"
        app:layout_constraintRight_toLeftOf="@+id/video_metting_layout_iv_hang_up"
        app:layout_constraintTop_toTopOf="@+id/video_metting_layout_iv_hang_up"/>

    <ImageView
        android:id="@+id/video_metting_layout_iv_hang_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_half"
        android:clickable="true"
        android:onClick="onClickListener"
        android:src="@drawable/hang_up_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/video_metting_layout_cb_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:button="@drawable/speaker_selector"
        android:checked="true"
        android:clickable="true"
        android:gravity="center|bottom"
        android:onClick="onClickListener"
        app:layout_constraintLeft_toRightOf="@+id/video_metting_layout_iv_hang_up"
        app:layout_constraintTop_toTopOf="@+id/video_metting_layout_iv_hang_up"/>
</android.support.constraint.ConstraintLayout>