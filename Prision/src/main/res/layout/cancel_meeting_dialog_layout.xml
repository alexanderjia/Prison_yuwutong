<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/cus_dialog_shape"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/show_terminal_dialog_layoutt_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:text="@string/please_select_cancel_meeting_reason"
            android:textColor="@color/common_blue"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner"
                android:textSize="16sp"
                android:spinnerMode="dropdown"
                android:minHeight="50dip"
                android:overlapAnchor="false"
                android:layout_width="match_parent"
                android:background="@drawable/spinner_bg"
                android:entries="@array/cancel_meeting_reason"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:padding="10dip"
                android:src="@mipmap/down"
                />

        </FrameLayout>

        <View
            android:id="@+id/show_terminal_dialog_layout_v_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/common_line_color" />

        <LinearLayout
            android:id="@+id/show_terminal_dialog_layout_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancel_video_dialog_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/common_hint_text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/show_terminal_dialog_layout_v_mid"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/common_line_color" />

            <TextView
                android:id="@+id/cancel_video_dialog_tv_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/common_blue"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>