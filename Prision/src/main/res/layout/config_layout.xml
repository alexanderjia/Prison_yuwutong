<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    >
    <com.starlight.mobile.android.lib.view.CusHeadView
        android:id="@+id/config_layout_ch_head"
        style="@style/common_head_blue_style"
        mAttr:chHead_title="@string/end_setting"
        mAttr:chHead_title_padding_left="0dip"
        mAttr:chHead_leftImg="@mipmap/ic_back"
        />

    <TextView
        android:id="@+id/config_layout_tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_terminal_infor"
        android:textSize="24sp"
        android:layout_below="@+id/config_layout_ch_head"
        android:textColor="@color/common_gray_title_color"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_half"
        />
    <TextView
        android:id="@+id/config_layout_tv_terminal_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/config_layout_tv_notice"
        android:layout_alignTop="@+id/config_layout_et_account"
        android:layout_alignBottom="@+id/config_layout_et_account"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_half"
        android:textColor="@color/common_light_text_color"
        android:paddingRight="10dip"
        android:layout_alignRight="@+id/config_layout_tv_config_time"
        android:textSize="26sp"

        android:background="@android:color/white"
        android:text="@string/terminal_account"
        />

    <EditText
        android:id="@+id/config_layout_et_account"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/margin_half"
        android:layout_alignRight="@+id/config_layout_tv_notice"
        android:paddingTop="@dimen/margin_half"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="15dip"
        android:background="@android:color/white"
        android:layout_toRightOf="@+id/config_layout_tv_terminal_account_title"
        android:layout_below="@+id/config_layout_tv_notice"
        android:hint="@string/terminal_account_hint"
        />

    <TextView
        android:id="@+id/config_layout_tv_rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/config_layout_tv_config_time"
        android:layout_alignLeft="@+id/config_layout_tv_notice"
        android:paddingLeft="@dimen/margin_half"
        android:textSize="26sp"
        android:layout_alignTop="@+id/config_layout_sp_rate"
        android:layout_alignBottom="@+id/config_layout_sp_rate"
        android:background="@android:color/white"
        android:text="@string/rate_colon"
        android:textColor="@color/common_light_text_color"

        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/config_layout_sp_rate"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"
        android:paddingTop="@dimen/margin_half"
        android:paddingRight="10dip"
        android:layout_marginTop="1dip"
        android:paddingBottom="@dimen/margin_half"
        android:layout_below="@+id/config_layout_et_account"
        android:layout_alignRight="@+id/config_layout_tv_notice"
        android:layout_toRightOf="@+id/config_layout_tv_rate_title"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:entries="@array/rate_array"
        android:theme="@style/common_spinner"
        android:layout_height="wrap_content"/>
    <com.gkzxhn.prison.customview.EqualHeightImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:padding="5dip"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignRight="@+id/config_layout_tv_notice"
        android:layout_alignTop="@+id/config_layout_tv_rate_title"
        android:layout_alignBottom="@+id/config_layout_tv_rate_title"
        android:src="@mipmap/down"
        />

    <TextView
        android:id="@+id/config_layout_tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/config_layout_tv_config_time"
        android:paddingLeft="@dimen/margin_half"
        android:layout_alignLeft="@+id/config_layout_tv_notice"
        android:textSize="26sp"
        android:background="@android:color/white"
        android:text="@string/protocol"
        android:textColor="@color/common_light_text_color"
        android:layout_alignTop="@+id/config_layout_sp_protocol"
        android:layout_alignBottom="@+id/config_layout_sp_protocol"

        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/config_layout_sp_protocol"
        android:spinnerMode="dropdown"
        android:paddingTop="@dimen/margin_half"
        android:layout_marginTop="1dip"
        android:paddingRight="10dip"
        android:paddingBottom="@dimen/margin_half"
        android:layout_below="@+id/config_layout_sp_rate"
        android:overlapAnchor="false"
        android:layout_alignRight="@+id/config_layout_tv_notice"
        android:layout_toRightOf="@+id/config_layout_tv_protocol"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:entries="@array/protocol"
        android:theme="@style/common_spinner"
        android:layout_height="wrap_content"/>
    <com.gkzxhn.prison.customview.EqualHeightImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/margin"
        android:padding="5dip"
        android:layout_alignRight="@+id/config_layout_tv_notice"
        android:layout_alignTop="@+id/config_layout_tv_protocol"
        android:layout_alignBottom="@+id/config_layout_tv_protocol"
        android:src="@mipmap/down"
        />

    <TextView
        android:id="@+id/config_layout_tv_config_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/config_layout_tv_notice"
        android:gravity="center_vertical"
        android:textSize="26sp"
        android:background="@android:color/white"
        android:text="@string/config_time"
        android:paddingRight="@dimen/margin_half"
        android:paddingLeft="@dimen/margin_half"
        android:textColor="@color/common_light_text_color"
        android:layout_alignTop="@+id/config_layout_et_config_time"
        android:layout_alignBottom="@+id/config_layout_et_config_time"

        />

    <EditText
        android:id="@+id/config_layout_et_config_time"
        android:layout_width="match_parent"
        android:layout_below="@+id/config_layout_sp_protocol"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingTop="@dimen/margin_half"
        android:layout_marginTop="1dip"
        android:paddingBottom="@dimen/margin_half"
        android:lines="1"
        android:text="20"
        android:paddingLeft="15dip"
        android:inputType="number"
        android:layout_toLeftOf="@+id/config_layout_tv_minute_unit"
        android:ellipsize="end"
        android:paddingRight="15dip"
        android:background="@android:color/white"
        android:layout_toRightOf="@+id/config_layout_tv_config_time"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_alignRight="@+id/config_layout_tv_notice"
        android:textSize="28sp"
        android:id="@+id/config_layout_tv_minute_unit"
        android:text="分钟"
        android:inputType="number"
        android:paddingRight="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:textColor="@color/common_gray_title_color"
        android:layout_alignTop="@+id/config_layout_et_config_time"
        android:layout_alignBottom="@+id/config_layout_et_config_time"
        />

    <Button
        android:id="@+id/config_layout_btn_save"
        android:layout_below="@+id/config_layout_tv_config_time"
        android:text="@string/save"
        android:layout_marginTop="70dip"
        android:paddingLeft="50dip"
        style="@style/common_blue_btn_style"
        />
</RelativeLayout>