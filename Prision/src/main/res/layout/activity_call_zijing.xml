<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:id="@+id/fl_call_zijing"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_call_zijing"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:text="正在拨号..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="#88ffffff"
        android:layout_gravity="left|top"
        android:id="@+id/ll_check_id"
        android:clickable="true"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginRight="120dip"
        android:layout_height="350dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_avatar"
                android:scaleType="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_scale"
                android:layout_width="wrap_content"
                android:layout_below="@id/iv_avatar"
                android:text="身份审核\n点击缩放"
                android:padding="3dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/iv_id_card_01"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dip"
            android:id="@+id/iv_id_card_02"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@android:color/black"
                  android:layout_gravity="bottom"
                  android:gravity="center"
                  android:orientation="horizontal" >

        <TextView
            android:id="@+id/mute_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/vconf_microphone_on_selector"
            android:gravity="center|bottom"
            android:minWidth="60dip"
            android:scaleType="center"
            android:text="@string/microphone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SmallTextSize" />

        <TextView
            android:id="@+id/quiet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/vconf_speaker_selector"
            android:gravity="center|bottom"
            android:minWidth="60dip"
            android:scaleType="center"
            android:text="@string/speaker"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SmallTextSize" />

        <TextView
            android:visibility="gone"
            android:id="@+id/inviteVConf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:drawableTop="@drawable/vconf_invite_selector"
            android:gravity="center|bottom"
            android:minWidth="60dip"
            android:scaleType="center"
            android:text="@string/add_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SmallTextSize" />

        <TextView
            android:id="@+id/moreInfo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:scaleType="center"
            android:visibility="gone"
            android:text="@string/more_info"
            android:textColor="@android:color/white"
            android:textSize="@dimen/SmallTextSize" />

        <ImageView
            android:id="@+id/exit_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:minWidth="60dip"
            android:scaleType="center"
            android:src="@drawable/vconf_hangup_selector" />
    </LinearLayout>
</FrameLayout>