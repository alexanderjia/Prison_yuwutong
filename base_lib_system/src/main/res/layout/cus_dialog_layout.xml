<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dip" >

    <TextView
        android:id="@+id/cus_dialog_layout_tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dp"
        android:text="Hint title"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/cus_dialog_layout_v_h_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/cus_dialog_layout_tv_content"
        android:background="#c8c8c8"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/cus_dialog_layout_panel_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cus_dialog_layout_v_h_line" >

        <Button
            android:id="@+id/cus_dialog_layout_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/cus_dialog_btn_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Cancel"
            android:textColor="#2181F9" />

        <View
            android:id="@+id/cus_dialog_layout_v_button_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#c8c8c8" />

        <Button
            android:id="@+id/cus_dialog_layout_btn_yes"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/cus_dialog_btn_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Confirm"
            android:textColor="#2181F9" />
    </LinearLayout>

    <View
        android:id="@+id/cus_dialog_layout_line"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_above="@id/cus_dialog_layout_panel_bottom_bar"
        android:layout_marginTop="10dp"
        android:background="#C8CBCC" />

</RelativeLayout>