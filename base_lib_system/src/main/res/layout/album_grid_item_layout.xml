<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:padding="1dip"
    android:layout_height="fill_parent" >

    <com.starlight.mobile.android.lib.view.EqualImageView
        android:id="@+id/album_grid_item_layout_iv_image"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:background="@drawable/ic_picture_load"
        android:scaleType="centerCrop" />
    <com.starlight.mobile.android.lib.view.RadioButtonPlus
        android:id="@+id/album_grid_item_layout_rb_select"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:button="@null"
        android:padding="15dip"
        android:drawableLeft="@drawable/album_checkbox_selector"
        mAttr:radio_left_width="30dip"
        mAttr:radio_left_height="30dip"
        />

</RelativeLayout>