<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/album_click_light_selector_style"
    android:paddingTop="5dip"
    >

    <ImageView
        android:id="@+id/album_dir_item_layout_iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_album_dir"
        android:paddingBottom="17dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_picture_load" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/album_dir_item_layout_iv_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/album_dir_item_layout_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/album_dir_item_layout_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#222222"
            android:text="-"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/album_dir_item_layout_iv_select"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_album_choose" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/album_dir_item_layout_iv_image"
        android:background="#19000000"
        />
</RelativeLayout>