<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.starlight.mobile.android.lib">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        >
        <activity
            android:name="com.starlight.mobile.android.lib.album.AlbumActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AlbumTheme"
            android:windowSoftInputMode="adjustUnspecified|stateHidden|adjustPan" >
        </activity>
        <activity
            android:name="com.starlight.mobile.android.lib.album.AlbumPreviewActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AlbumTheme"
            android:windowSoftInputMode="adjustUnspecified|stateHidden|adjustPan" >
        </activity>
        <activity
            android:name="com.starlight.mobile.android.lib.activity.CutPhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AlbumTheme"
            android:windowSoftInputMode="adjustUnspecified|stateHidden|adjustPan" >
        </activity>

    </application>
</manifest>
